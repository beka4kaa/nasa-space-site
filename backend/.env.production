# Backend Production Environment Configuration
# NASA KOI Portal API Settings

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=False
RELOAD=False

# API Configuration
API_PREFIX=/api/v1
API_TITLE=NASA KOI Portal API
API_VERSION=1.0.0
API_DESCRIPTION=NASA Kepler Objects of Interest Analysis Portal

# CORS Settings - Update with your production domains
CORS_ORIGINS=["https://your-domain.com", "https://www.your-domain.com"]
CORS_CREDENTIALS=True
CORS_METHODS=["GET", "POST", "PUT", "DELETE"]
CORS_HEADERS=["*"]

# File Upload Settings
MAX_FILE_SIZE=104857600  # 100MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=["csv", "xls", "xlsx"]

# ML Model Settings
MODEL_DIR=./models
MODEL_FILE=boost_test_model.json
MODEL_CACHE=True
PREDICTION_BATCH_SIZE=1000

# Logging Configuration
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings - CHANGE IN PRODUCTION
SECRET_KEY=${SECRET_KEY:-change_this_secret_key_in_production}
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Performance Settings
WORKERS=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
TIMEOUT=120
KEEPALIVE=2

# Feature flags
ENABLE_ANALYTICS=True
ENABLE_BATCH_PROCESSING=True
ENABLE_MODEL_VALIDATION=True